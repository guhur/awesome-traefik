version: '3.9'

services:
  web:
    image: nginx:latest
    volumes:
      - ./nginx:/etc/nginx/conf.d/
      - $DATA_DIR:/var/www/html
      - logs-web:/var/log/nginx
    depends_on:
      - php
    restart: unless-stopped
    deploy:
      mode: replicated
      replicas: 1
      labels:
        - "traefik.port=80"
        - "traefik.enable=true"
        - "traefik.docker.network=traefik_network"
        - "traefik.http.routers.php.entrypoints=web,websecure"
        - "traefik.http.routers.php.rule=Host(`${PHP_PREFIX:-php}.${DOMAIN}`)"
        - "traefik.http.services.php.loadbalancer.server.port=80"
        - "traefik.http.routers.php.tls=true"
        - "traefik.http.routers.php.tls.certresolver=leresolver"
    networks:
      - lan
      - traefik_network

  php:
    # image: edu/php7.1-fpm
    image: php:7.1.33-fpm-buster
    volumes:
      - $DATA_DIR:/var/www/html
      - logs-php-fpm:/var/log/php-fpm
    depends_on:
      database:
        condition: service_healthy
    deploy:
      mode: replicated
      replicas: 1
      restart_policy:
        condition: on-failure
    networks:
      - lan

  database:
    image: mariadb
    container_name: php_database
    restart: unless-stopped
    command: --transaction-isolation=READ-COMMITTED --binlog-format=ROW
    environment:
      - MYSQL_RANDOM_ROOT_PASSWORD=no
      - MYSQL_DATABASE=${DB_NAME:-php}
      - MYSQL_USER=${DB_USER:-php}
      - MYSQL_PASSWORD=${DB_PASS}
      - PUID=$PUID
      - PGID=$PUID
      - TZ=$TIMEZONE
    networks:
      - lan
    volumes:
      - db:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin" ,"ping", "-h", "localhost"]
      interval: 30s
      timeout: 10s
      retries: 3


volumes:
  logs-php-fpm:
  logs-web:
  db:
    # php_dir: 
    #   driver: local
    #   driver_opts:
    #     type: 'none'
    #     o: 'bind'
    #     device: ${DATA_DIR}
    # nginx_dir: 
    #   driver: local
    #   driver_opts:
    #     type: 'none'
    #     o: 'bind'
    #     device: ${NGINX_DIR:-php/nginx/}

networks:
  lan:
  traefik_network:
    external: true
